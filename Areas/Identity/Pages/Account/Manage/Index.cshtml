@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="user-profile-container">
    <div class="content-card">
        <div class="card-header">
            <h2 class="card-title">@ViewData["Title"]</h2>
            <p class="card-subtitle">Manage your account information</p>
        </div>
        
        <partial name="_StatusMessage" for="StatusMessage" />
        
        <!-- Profile Image Section -->
        <div class="text-center mb-4 profile-image-container">
            <img src="/images/default-avatar.png" alt="Profile" class="profile-avatar" />
            <h4 class="mt-3">@Model.Username</h4>
        </div>
        
        <form id="profile-form" method="post" class="form-container">
            <div asp-validation-summary="ModelOnly" class="text-danger validation-summary" role="alert"></div>
            
            <div class="form-group">
                <div class="form-floating mb-3">
                    <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                    <label asp-for="Username" class="form-label"></label>
                </div>
            </div>
            
            <div class="form-group">
                <div class="form-floating mb-3">
                    <input asp-for="Input.FirstName" class="form-control" placeholder="Please enter your first name." />
                    <label asp-for="Input.FirstName" class="form-label">First Name</label>
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
            </div>
            
            <div class="form-group">
                <div class="form-floating mb-3">
                    <input asp-for="Input.LastName" class="form-control" placeholder="Please enter your last name." />
                    <label asp-for="Input.LastName" class="form-label">Last Name</label>
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
            </div>
            
            <div class="form-group">
                <div class="form-floating mb-3">
                    <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number."/>
                    <label asp-for="Input.PhoneNumber" class="form-label"></label>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            
            <div class="form-group">
                <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary action-button">Save changes</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    /* Page Styles */
    .user-profile-container {
        font-family: 'Sora', sans-serif;
        max-width: 800px;
        margin: 0 auto;
        padding: 20px 10px;
    }
    
    /* Card Design */
    .content-card {
        background-color: #ffffff;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        padding: 30px;
        transition: all 0.3s ease;
        border-top: 5px solid #3498db;
    }
    
    .content-card:hover {
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
        transform: translateY(-5px);
    }
    
    /* Card Header */
    .card-header {
        margin-bottom: 25px;
        border-bottom: 1px solid #e0e0e0;
        padding-bottom: 15px;
    }
    
    .card-title {
        color: #2c3e50;
        font-size: 1.8rem;
        font-weight: 700;
        margin-bottom: 8px;
    }
    
    .card-subtitle {
        color: #7f8c8d;
        font-size: 1rem;
    }
    
    /* Profile Image Styling */
    .profile-image-container {
        margin: 15px auto 30px;
    }
    
    .profile-avatar {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        object-fit: cover;
        border: 5px solid #f8f9fa;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
    }
    
    .profile-avatar:hover {
        transform: scale(1.05);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    }
    
    /* Form Styling */
    .form-container {
        padding: 10px 0;
    }
    
    .form-group {
        margin-bottom: 20px;
    }
    
    .form-control {
        border-radius: 10px;
        padding: 12px 15px;
        font-size: 1rem;
        border: 1px solid #dfe4ea;
        transition: all 0.3s ease;
    }
    
    .form-control:focus {
        border-color: #3498db;
        box-shadow: 0 0 0 0.2rem rgba(52, 152, 219, 0.25);
    }
    
    .form-label {
        font-weight: 600;
        color: #34495e;
    }
    
    /* Button Styling */
    .action-button {
        background-color: #3498db;
        border: none;
        border-radius: 10px;
        color: white;
        font-weight: 600;
        padding: 12px 25px;
        transition: all 0.3s ease;
    }
    
    .action-button:hover {
        background-color: #2980b9;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(52, 152, 219, 0.4);
    }
    
    /* Validation Styling */
    .text-danger {
        color: #e74c3c;
        font-size: 0.9rem;
        margin-top: 5px;
        display: block;
    }
    
    .validation-summary {
        background-color: rgba(231, 76, 60, 0.1);
        border-left: 4px solid #e74c3c;
        padding: 10px 15px;
        border-radius: 5px;
        margin-bottom: 20px;
    }
    
    /* Disabled input styling */
    input:disabled {
        background-color: #f8f9fa;
        cursor: not-allowed;
    }
</style>
