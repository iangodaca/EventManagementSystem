@inject SignInManager<AppUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<div class="nav-sidebar">
    <div class="user-info">
        <div class="avatar">
            <i class="bi bi-person-circle"></i>
        </div>
        <div class="user-details">
            <h3>Account Settings</h3>
            <p>Manage your profile</p>
        </div>
    </div>
    
    <ul class="nav nav-pills flex-column">
        <li class="nav-item">
            <a class="nav-link @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index">
                <i class="bi bi-person me-2"></i> Profile
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">
                <i class="bi bi-key me-2"></i> Password
            </a>
        </li>
        @if (hasExternalLogins)
        {
            <li id="external-logins" class="nav-item">
                <a id="external-login" class="nav-link @ManageNavPages.ExternalLoginsNavClass(ViewContext)" asp-page="./ExternalLogins">
                    <i class="bi bi-box-arrow-in-right me-2"></i> External logins
                </a>
            </li>
        }
    </ul>
</div>

<style>
    body {
        background-color: powderblue;
        font-family: 'Sora', sans-serif;
    }
    
    /* Nav Sidebar Container */
    .nav-sidebar {
        background-color: #ffffff;
        border-radius: 15px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: all 0.3s ease;
        margin-bottom: 20px;
    }
    
    /* User Info Section */
    .user-info {
        background: linear-gradient(135deg, #3498db, #2c3e50);
        color: white;
        padding: 25px 20px;
        display: flex;
        align-items: center;
    }
    
    .avatar {
        background-color: rgba(255, 255, 255, 0.2);
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.8rem;
        margin-right: 15px;
    }
    
    .user-details h3 {
        margin: 0;
        font-size: 1.2rem;
        font-weight: 600;
    }
    
    .user-details p {
        margin: 5px 0 0;
        font-size: 0.85rem;
        opacity: 0.9;
    }
    
    /* Nav Items */
    .nav-pills {
        padding: 15px;
    }
    
    .nav-pills .nav-item {
        margin-bottom: 8px;
    }
    
    /* Nav Links */
    .nav-pills .nav-link {
        color: #34495e;
        background-color: #f8f9fa;
        border-radius: 10px;
        padding: 12px 20px;
        transition: all 0.3s ease;
        font-weight: 500;
        border-left: 4px solid transparent;
    }
    
    /* Active Link */
    .nav-pills .nav-link.active {
        background-color: #e8f4fc;
        color: #3498db;
        border-left: 4px solid #3498db;
        font-weight: 600;
        box-shadow: 0 4px 15px rgba(52, 152, 219, 0.1);
    }
    
    .nav-pills .nav-link:hover:not(.active) {
        background-color: #f0f2f5;
        transform: translateX(3px);
    }
    
    /* Icons in nav links */
    .nav-link i {
        width: 20px;
        text-align: center;
    }
    
    @@keyframes fadeSlideIn {
        from {
            opacity: 0;
            transform: translateX(-20px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }
    
    /* Media queries for responsive layout */
    @@media (max-width: 768px) {
        .user-info {
            flex-direction: column;
            text-align: center;
        }
        
        .avatar {
            margin-right: 0;
            margin-bottom: 15px;
        }
    }
</style>
