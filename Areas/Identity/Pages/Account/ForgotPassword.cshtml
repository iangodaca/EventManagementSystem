@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="user-profile-container">
    <div class="content-card">
        <div class="card-header">
            <h2 class="card-title">@ViewData["Title"]</h2>
            <p class="card-subtitle">Enter your email address and we'll send you a link to reset your password</p>
        </div>
        
        <form method="post" class="form-container">
            <div asp-validation-summary="ModelOnly" class="text-danger validation-summary" role="alert"></div>
            
            <div class="form-group">
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
            </div>
            
            <div class="form-group">
                <button type="submit" class="w-100 btn btn-lg btn-primary action-button">Reset Password</button>
            </div>
            
            <div class="mt-4 text-center">
                <a href="/Identity/Account/Login" class="link-return">Return to login</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    /* Page Styles */
    .user-profile-container {
        font-family: 'Sora', sans-serif;
        max-width: 800px;
        margin: 0 auto;
        padding: 20px 10px;
    }
    
    /* Card Design */
    .content-card {
        background-color: #ffffff;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        padding: 30px;
        border-top: 5px solid #3498db;
    }
    
    /* Card Header */
    .card-header {
        margin-bottom: 25px;
        border-bottom: 1px solid #e0e0e0;
        padding-bottom: 15px;
    }
    
    .card-title {
        color: #2c3e50;
        font-size: 1.8rem;
        font-weight: 700;
        margin-bottom: 8px;
    }
    
    .card-subtitle {
        color: #7f8c8d;
        font-size: 1rem;
    }
    
    /* Form Styling */
    .form-container {
        padding: 10px 0;
    }
    
    .form-group {
        margin-bottom: 20px;
    }
    
    .form-control {
        border-radius: 10px;
        padding: 12px 15px;
        font-size: 1rem;
        border: 1px solid #dfe4ea;
    }
    
    .form-control:focus {
        border-color: #3498db;
        box-shadow: 0 0 0 0.2rem rgba(52, 152, 219, 0.25);
    }
    
    .form-label {
        font-weight: 600;
        color: #34495e;
    }
    
    /* Button Styling */
    .action-button {
        background-color: #3498db;
        border: none;
        border-radius: 10px;
        color: white;
        font-weight: 600;
        padding: 12px 25px;
    }
    
    .action-button:hover {
        background-color: #2980b9;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(52, 152, 219, 0.4);
    }
    
    /* Link styling */
    .link-return {
        color: #3498db;
        text-decoration: none;
        font-weight: 500;
    }
    
    .link-return:hover {
        color: #2980b9;
        text-decoration: underline;
    }
    
    /* Validation Styling */
    .text-danger {
        color: #e74c3c;
        font-size: 0.9rem;
        margin-top: 5px;
        display: block;
    }
    
    .validation-summary {
        background-color: rgba(231, 76, 60, 0.1);
        border-left: 4px solid #e74c3c;
        padding: 10px 15px;
        border-radius: 5px;
        margin-bottom: 20px;
    }
</style>
