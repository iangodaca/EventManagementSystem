@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <section class="login-form-container">
            <form id="account" method="post" class="login-form">
                <h1 class="text-center h3">@ViewData["Title"]</h1>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>

                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>

                <div class="text-centers mt-3">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    /* Body Style */
    body {
        animation: fadeIn 1s ease-in;
        background-color: powderblue;
        font-family: 'Segoe UI', sans-serif;
    }

    /* Log In Title */
    form h1 {
        color: #2c3e50;
        font-size: 7rem; /* Increased font size for the log in title */
        font-weight: bold;
        text-transform: uppercase;
    }

    /* Form Container */
    .login-form-container {
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.4); /* Enhanced box shadow for better depth */
        padding: 30px;
        animation: slideInUp 1s ease-in-out;
        margin-top: 10px;
    }

    .form-floating {
        position: relative;
    }

    .form-control {
        border-radius: 8px;
        padding: 15px;
        font-size: 1.1rem;
    }

    .form-label {
        font-weight: 600;
    }

    .btn-primary {
        background-color: #3498db;
        border-color: #3498db;
        border-radius: 8px;
        padding: 12px 20px;
        font-size: 1.1rem;
        font-weight: 600;
        transition: all 0.3s;
    }

        .btn-primary:hover {
            background-color: #2980b9;
            border-color: #2980b9;
        }

    /* Links Style */
    form a {
        color: #3498db;
        font-weight: 600;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }

    /* Text center for the links */
    .text-center {
        color: darkblue;
    }
    .text-centers {
        font-size: 1rem;
        color: #555;
    }

    /* Checkbox Style */
    .form-check-input {
        margin-right: 10px;
    }

    /* Animation for the form */
    keyframes fadeIn {
        from

    {
        opacity: 0;
    }

    to {
        opacity: 1;
    }

    }

    keyframes slideInUp {
        from

    {
        transform: translateY(20px);
        opacity: 0;
    }

    to {
        transform: translateY(0);
        opacity: 1;
    }

    }
</style>
