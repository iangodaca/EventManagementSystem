<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EventManagementSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/EventManagementSystem.styles.css" asp-append-version="true" />
    <link rel="icon" href="favicon.ico"/>
    <link href="https://fonts.googleapis.com/css2?family=Sora:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
         body {
        background-color: powderblue;
        font-family: 'Sora', sans-serif;
    }
    main {
        animation: fadeIn 1s ease-in;
    }
    </style>
</head>
<body>
    <header class="animate__animated animate__fadeInDown">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom mb-3" style="background-color: darkblue;">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="/image/logo].png" alt="Alternate Text" style="height: 60px; width: 60px; border-radius: 50%;" />
                </a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item" data-bs-toggle="tooltip" title="Go to Home">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item" data-bs-toggle="tooltip" title="View Privacy Policy">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item" data-bs-toggle="tooltip" title="Browse Events">
                                <a class="nav-link text-light" asp-area="" asp-controller="Events" asp-action="Index">Events</a>
                            </li>
                            <li class="nav-item" data-bs-toggle="tooltip" title="View Reports">
                                <a class="nav-link text-light" asp-area="" asp-controller="Report" asp-action="Index">Reports</a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>
    </header>


    <div class="container animate__animated animate__fadeIn">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted animate__animated animate__fadeInUp">
        <div class="container text-center">
            &copy; 2025 - Eventive - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <button id="scrollTopBtn" class="btn btn-primary rounded-circle" title="Back to top">
        <i class="bi bi-arrow-up"></i>
    </button>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


    <script>
        // Tooltip Initialization
        const tooltips = document.querySelectorAll('[data-bs-toggle="tooltip"]');
        tooltips.forEach(el => new bootstrap.Tooltip(el));

        // Scroll to Top Button
        const scrollTopBtn = document.getElementById("scrollTopBtn");
        window.onscroll = () => {
            if (document.body.scrollTop > 100 || document.documentElement.scrollTop > 100) {
                scrollTopBtn.style.display = "block";
            } else {
                scrollTopBtn.style.display = "none";
            }
        };

        scrollTopBtn.addEventListener("click", () => {
            window.scrollTo({ top: 0, behavior: "smooth" });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
