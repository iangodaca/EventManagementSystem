@using Microsoft.EntityFrameworkCore
@model List<EventManagementSystem.Models.Entities.Report>

@{
    ViewData["Title"] = "Monthly Event Report";
}

<div class="container py-4">
    <h1 class="fs-4 fw-bold mb-4">Monthly Event Report</h1>

    <!-- Filters -->
    <form method="get" class="bg-white p-4 rounded shadow mb-4">
        <div class="row g-3">
            <div class="col-md-3 col-12">
                <label class="form-label">Search Title</label>
                <input type="text" name="search" value="@ViewBag.Search" class="form-control" />
            </div>
            <div class="col-md-3 col-12">
                <label class="form-label">Category</label>
                <input type="text" name="category" value="@ViewBag.Category" class="form-control" />
            </div>
            <div class="col-md-3 col-12">
                <label class="form-label">From Date</label>
                <input type="date" name="fromDate" value="@ViewBag.FromDate" class="form-control" />
            </div>
            <div class="col-md-3 col-12">
                <label class="form-label">To Date</label>
                <input type="date" name="toDate" value="@ViewBag.ToDate" class="form-control" />
            </div>
            <div class="col-12 text-end">
                <button type="submit" class="btn btn-primary mt-2">Filter</button>
            </div>
        </div>
    </form>

    <!-- Dashboard Stats -->
    <div class="row g-3">
        <div class="col-12 col-sm-6 col-lg-3">
            <div class="bg-white p-4 rounded shadow text-center h-100">
                <h5>Total Events</h5>
                <p class="fs-4 fw-bold">@Model.Sum(r => r.Events.Count)</p>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-lg-3">
            <div class="bg-white p-4 rounded shadow text-center h-100">
                <h5>Completed Events</h5>
                <p class="fs-4 fw-bold">@Model.SelectMany(r => r.Events).Count(e => e.Status == "Completed")</p>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-lg-3">
            <div class="bg-white p-4 rounded shadow text-center h-100">
                <h5>Upcoming Events</h5>
                <p class="fs-4 fw-bold">@Model.SelectMany(r => r.Events).Count(e => e.Status == "Upcoming")</p>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-lg-3">
            <div class="bg-white p-4 rounded shadow text-center h-100">
                <h5>Total Users</h5>
                <p class="fs-4 fw-bold">@ViewBag.TotalUsers</p>
            </div>
        </div>
    </div>

    <!-- Charts -->
    <div class="row mt-4 g-3">
        <div class="col-12 col-md-6">
            <div class="bg-white p-4 rounded shadow text-center h-100">
                <h6 class="mb-3">Event Categories</h6>
                <canvas id="categoryPieChart"></canvas>
            </div>
        </div>
        <div class="col-12 col-md-6">
            <div class="bg-white p-4 rounded shadow text-center h-100">
                <h6 class="mb-3">Events by Month</h6>
                <canvas id="eventsBarChart"></canvas>
            </div>
        </div>
    </div>

    <!-- Monthly Event List -->
    <div class="mt-4">
        @foreach (var month in Model)
        {
            <div class="bg-white p-4 rounded shadow mb-4">
                <h5 class="text-start mb-3">@($"{month.Year}-{month.Month:D2}")</h5>
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th>Event Title</th>
                                <th>Date</th>
                                <th>Attendee Count</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ev in month.Events)
                            {
                                <tr>
                                    <td>@ev.Title</td>
                                    <td>@ev.Date.ToString("yyyy-MM-dd")</td>
                                    <td>@ev.AttendeeCount</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    new Chart(document.getElementById('categoryPieChart'), {
        type: 'pie',
        data: {
            labels: @Html.Raw(Json.Serialize(ViewBag.CategoryLabels)),
            datasets: [{
                data: @Html.Raw(Json.Serialize(ViewBag.CategoryData)),
                backgroundColor: ['#FF6384', '#36A2EB', '#FFCE56', '#4CAF50', '#FF9800'],
                hoverOffset: 4
            }]
        }
    });

    new Chart(document.getElementById('eventsBarChart'), {
        type: 'bar',
        data: {
            labels: @Html.Raw(Json.Serialize(ViewBag.Months)),
            datasets: [{
                label: 'Total Events',
                data: @Html.Raw(Json.Serialize(ViewBag.TotalEventsByMonth)),
                backgroundColor: '#4CAF50',
                borderColor: '#388E3C',
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            scales: {
                x: { beginAtZero: true }
            }
        }
    });
</script>
