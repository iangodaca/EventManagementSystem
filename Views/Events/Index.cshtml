@model IEnumerable<EventManagementSystem.Models.Entities.Event>

@{
    ViewData["Title"] = "Events List";
}

<div class="container mt-5">
    <div class="bg-white p-4 rounded shadow">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="mb-0">Events</h2>
            <a class="btn btn-primary" href="/Events/Create">
                <i class="bi bi-plus-circle me-1"></i> Add New Event
            </a>
        </div>

        <!-- Filters -->
        <form method="get" class="d-flex mb-4 justify-content-end">
            <div class="input-group me-2" style="width: 300px;">
                <input type="text" name="search" value="@ViewBag.Search" class="form-control" placeholder="Search..." />
                <button type="submit" class="btn btn-outline-secondary">
                    <i class="bi bi-search"></i>
                </button>
            </div>

            <div class="dropdown">
                <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="filterDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="bi bi-funnel"></i> Filters
                </button>
                <div class="dropdown-menu dropdown-menu-end p-3" aria-labelledby="filterDropdown" style="width: 300px;">
                    <div class="mb-3">
                        <label class="form-label">Category</label>
                        <input type="text" name="category" value="@ViewBag.Category" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">From Date</label>
                        <input type="date" name="fromDate" value="@ViewBag.FromDate" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">To Date</label>
                        <input type="date" name="toDate" value="@ViewBag.ToDate" class="form-control" />
                    </div>
                    <div class="text-end">
                        <button type="submit" class="btn btn-primary">Apply Filters</button>
                    </div>
                </div>
            </div>
        </form>

        <!-- Events Card Stack -->
        <div class="d-flex flex-column gap-3">
            @foreach (var evt in Model)
            {
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h5 class="card-title text-primary mb-0">@evt.EventTitle</h5>
                            <span class="text-muted small">
                                <i class="bi bi-calendar3 me-1"></i>
                                @evt.EventDate.ToString("yyyy-MM-dd hh:mm tt")
                            </span>
                        </div>

                        <div class="d-flex gap-3">
                            <!-- Event image -->
                            <div style="max-width: 300px; max-height: 200px; overflow: hidden;">
                                <img src="@evt.ImagePath" class="h-100 w-100 object-fit-cover" alt="Event Image" />
                            </div>

                            <!-- Event details -->
                            <div class="flex-grow-1">
                                <p class="mb-2"><i class="bi bi-tag me-1"></i><strong> @evt.EventCategory</strong></p>
                                <p class="mb-2"><i class="bi bi-geo-alt me-1"></i><strong> @evt.EventLocation</strong></p>
                                <p class="mb-3 event-description">@evt.EventDescription</p>
                                <p class="text-muted mb-2">Attendees: <strong>@evt.AttendeeCount</strong></p>
                            </div>
                        </div>

                        <!-- Buttons section -->
                        <div class="d-flex justify-content-end mt-3">
                            <a class="btn btn-sm btn-outline-warning me-2" asp-controller="Events" asp-action="Edit" asp-route-id="@evt.Id">
                                <i class="bi bi-pencil me-1"></i> Edit
                            </a>
                            <a class="btn btn-sm btn-outline-danger" asp-controller="Events" asp-action="Delete" asp-route-id="@evt.Id"
                               onclick="return confirm('Are you sure you want to delete this event?');">
                                <i class="bi bi-trash me-1"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    body {
        animation: fadeIn 1s ease-in;
        background-color: powderblue;
        font-family: 'Segoe UI', sans-serif;
    }

    .container {
        max-width: 1200px;
        width: 95%;
    }

    .event-description {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .object-fit-cover {
        object-fit: cover;
    }

    .card {
        transition: transform 0.2s ease;
    }

        .card:hover {
            transform: translateY(-2px);
        }
</style>