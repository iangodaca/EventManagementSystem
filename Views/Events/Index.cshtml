@model IEnumerable<EventManagementSystem.Models.Entities.Event>

@{
    ViewData["Title"] = "Events List";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Events</h2>
        <a class="btn btn-primary" href="/Events/Create">
            <i class="bi bi-plus-circle me-1"></i> Add New Event
        </a>
    </div>

    <!-- Filters -->
    <form method="get" class="mb-4 bg-white p-4 rounded shadow">
        <div class="row g-3">
            <div class="col-md-3">
                <label class="form-label">Search Title</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input type="text" name="search" value="@ViewBag.Search" class="form-control" />
                </div>
            </div>
            <div class="col-md-3">
                <label class="form-label">Category</label>
                <input type="text" name="category" value="@ViewBag.Category" class="form-control" />
            </div>
            <div class="col-md-3">
                <label class="form-label">From Date</label>
                <input type="date" name="fromDate" value="@ViewBag.FromDate" class="form-control" />
            </div>
            <div class="col-md-3">
                <label class="form-label">To Date</label>
                <input type="date" name="toDate" value="@ViewBag.ToDate" class="form-control" />
            </div>
            <div class="col-md-12 text-end">
                <button type="submit" class="btn btn-primary mt-2">Filter</button>
            </div>
        </div>
    </form>

    <!-- Events Card Stack -->
    <div class="d-flex flex-column">
        @foreach (var evt in Model)
        {
            <div class="card mb-4 shadow-sm border-0">
                <!-- Card content -->
                <div class="card-body">
                    <div class="d-flex gap-3 align-items-center">
                        <!-- Event title -->
                        <h5 class="card-title text-primary mb-0">@evt.EventTitle</h5>

                        <!-- Date displayed to the right of the title -->
                        <p class="text-muted small mb-0 card-date ms-auto">
                            <i class="bi bi-calendar3 me-1"></i>
                            @evt.EventDate.ToString("yyyy-MM-dd hh:mm tt")
                        </p>
                    </div>

                    <div class="d-flex gap-3 mt-2">
                        <!-- Event image -->
                        <img src="@evt.ImagePath" class="card-img-top" style="height: 175px; object-fit: cover;width:300px" alt="Event Image" />

                        <!-- Event details -->
                        <div>
                            <p class="text-muted mb-2">Attendees: <strong>@evt.AttendeeCount</strong></p>
                            <p class="mb-1"><i class="bi bi-tag me-1"></i><strong>Category:</strong> @evt.EventCategory</p>
                            <p class="mb-1"><i class="bi bi-geo-alt me-1"></i><strong>Location:</strong> @evt.EventLocation</p>
                            <p class="mb-3"><i class="bi bi-card-text me-1"></i>@evt.EventDescription</p>
                        </div>
                    </div>

                    <!-- Buttons section -->
                    <div class="d-flex justify-content-end">
                        <a class="btn btn-sm btn-outline-warning me-2" asp-controller="Events" asp-action="Edit" asp-route-id="@evt.Id">
                            <i class="bi bi-pencil me-1"></i> Edit
                        </a>
                        <a class="btn btn-sm btn-outline-danger" asp-controller="Events" asp-action="Delete" asp-route-id="@evt.Id"
                           onclick="return confirm('Are you sure you want to delete this event?');">
                            <i class="bi bi-trash me-1"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    body {
        animation: fadeIn 1s ease-in;
        background-color: powderblue;
        font-family: 'Segoe UI', sans-serif;
    }

    h4 {
        font-weight: 600;
    }

    .container {
        max-width: 900px;
    }

    /* Additional styles for card and button positioning */
    .card-body {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .d-flex.justify-content-end {
        position: absolute;
        bottom: 15px;
        right: 15px;
    }

    /* Adjusting date positioning to the right of the event title */
    .card-date {
        margin-bottom: 0;
        text-align: start;
        flex-shrink: 0; /* Prevent it from shrinking */
    }

    .card-title {
        margin-bottom: 0;
    }

    /* Positioning the date to the right of the title */
    .ms-auto {
        margin-left: auto;
    }

    .input-group-text {
        background-color: #e9ecef;
    }
</style>
