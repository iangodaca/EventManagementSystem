@model IEnumerable<EventManagementSystem.Models.Entities.Event>

@{
    ViewData["Title"] = "Events List";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Events</h2>
        <a class="btn btn-primary" href="/Events/Create">
            <i class="bi bi-plus-circle me-1"></i> Add New Event
        </a>
    </div>

    <!-- Filters -->
    <form method="get" class="mb-4 bg-white p-4 rounded shadow">
        <div class="row g-3">
            <div class="col-md-3">
                <label class="form-label">Search Title</label>
                <input type="text" name="search" value="@ViewBag.Search" class="form-control" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Category</label>
                <input type="text" name="category" value="@ViewBag.Category" class="form-control" />
            </div>
            <div class="col-md-3">
                <label class="form-label">From Date</label>
                <input type="date" name="fromDate" value="@ViewBag.FromDate" class="form-control" />
            </div>
            <div class="col-md-3">
                <label class="form-label">To Date</label>
                <input type="date" name="toDate" value="@ViewBag.ToDate" class="form-control" />
            </div>
            <div class="col-md-12 text-end">
                <button type="submit" class="btn btn-primary mt-2">Filter</button>
            </div>
        </div>
    </form>

    <!-- Events Card Stack -->
    <div class="card-group">
        @foreach (var evt in Model)
        {
            <div class="card mb-4 shadow-sm border-0">
                <!-- Placeholder image or evt.ImageUrl -->
                <img src="@(string.IsNullOrEmpty(evt.ImagePath) ? "/image/event_placeholder.jpg" : evt.ImagePath)"
                     class="card-img-top" style="height: 200px; object-fit: cover;" alt="Event Image" />


                <div class="card-body">
                    <h5 class="card-title text-primary">@evt.EventTitle</h5>
                    <p class="text-muted mb-2">Attendees: <strong>@evt.AttendeeCount</strong></p>
                    <p class="mb-1"><i class="bi bi-tag me-1"></i><strong>Category:</strong> @evt.EventCategory</p>
                    <p class="mb-1"><i class="bi bi-geo-alt me-1"></i><strong>Location:</strong> @evt.EventLocation</p>
                    <p class="mb-3"><i class="bi bi-card-text me-1"></i>@evt.EventDescription</p>

                    <div>
                        <p class="text-end text-muted small mb-3">
                            <i class="bi bi-calendar3 me-1"></i>
                            @evt.EventDate.ToString("yyyy-MM-dd hh:mm tt")
                        </p>
                        <div class="d-flex justify-content-between">
                            <a class="btn btn-sm btn-outline-warning" asp-controller="Events" asp-action="Edit" asp-route-id="@evt.Id">Edit</a>
                            <a class="btn btn-sm btn-outline-danger" asp-controller="Events" asp-action="Delete" asp-route-id="@evt.Id"
                               onclick="return confirm('Are you sure you want to delete this event?');">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<style>
    body {
        animation: fadeIn 1s ease-in;
        background-color: powderblue;
        font-family: 'Segoe UI', sans-serif;
    }

    h4 {
        font-weight: 600;
    }

    .container {
        max-width: 900px;
    }
</style>