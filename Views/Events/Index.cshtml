@model IEnumerable<EventManagementSystem.Models.Entities.Event>
@{
    ViewData["Title"] = "Events List";
}

<h2>Events</h2>

<a class="btn btn-primary mb-3" href="/Events/Create">Add New Event</a>
<form method="get" class="mb-4 bg-white p-4 rounded shadow flex flex-wrap gap-4 items-end">
    <div>
        <label class="block text-sm font-medium mb-1">Search Title</label>
        <input type="text" name="search" value="@ViewBag.Search" class="border rounded px-3 py-1 w-full" />
    </div>
    <div>
        <label class="block text-sm font-medium mb-1">Category</label>
        <input type="text" name="category" value="@ViewBag.Category" class="border rounded px-3 py-1 w-full" />
    </div>
    <div>
        <label class="block text-sm font-medium mb-1">From Date</label>
        <input type="date" name="fromDate" value="@ViewBag.FromDate" class="border rounded px-3 py-1" />
    </div>
    <div>
        <label class="block text-sm font-medium mb-1">To Date</label>
        <input type="date" name="toDate" value="@ViewBag.ToDate" class="border rounded px-3 py-1" />
    </div>
    <div>
        <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Filter</button>
    </div>
</form>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Location</th>
            <th>Date</th>
            <th>Category</th>
            <th>Attendees</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var evt in Model)
        {
            <tr>
                <td>@evt.EventTitle</td>
                <td>@evt.EventDescription</td>
                <td>@evt.EventLocation</td>
                <td>@evt.EventDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@evt.EventCategory</td>
                <td>@evt.AttendeeCount</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-controller="Events" asp-action="Edit" asp-route-id="@evt.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-controller="Events" asp-action="Delete" asp-route-id="@evt.Id"
                       onclick="return confirm('Are you sure you want to delete this event?');">Delete</a>
                </td>

            </tr>
        }
    </tbody>
</table>
