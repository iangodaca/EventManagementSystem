@model IEnumerable<EventManagementSystem.Models.Entities.Event>

@{
    ViewData["Title"] = "Events List";
}

<div class="container mt-5">
    <div class="bg-white p-4 rounded shadow">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="mb-0">Events</h2>
            <a class="btn btn-primary" href="/Events/Create">
                <i class="bi bi-plus-circle me-1"></i> Add New Event
            </a>
        </div>

        <!-- Filters -->
        <form method="get" class="d-flex mb-4 justify-content-end">
            <div class="input-group me-2" style="width: 300px;">
                <input type="text" name="search" value="@ViewBag.Search" class="form-control" placeholder="Search..." />
                <button type="submit" class="btn btn-outline-secondary">
                    <i class="bi bi-search"></i>
                </button>
            </div>

            <div class="dropdown">
                <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="filterDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="bi bi-funnel"></i> Filters
                </button>
                <div class="dropdown-menu dropdown-menu-end p-3" aria-labelledby="filterDropdown" style="width: 300px;">
                    <div class="mb-3">
                        <label class="form-label">Category</label>
                        <input type="text" name="category" value="@ViewBag.Category" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">From Date</label>
                        <input type="date" name="fromDate" value="@ViewBag.FromDate" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">To Date</label>
                        <input type="date" name="toDate" value="@ViewBag.ToDate" class="form-control" />
                    </div>
                    <div class="text-end">
                        <button type="submit" class="btn btn-primary">Apply Filters</button>
                    </div>
                </div>
            </div>
        </form>

        <!-- Events Card Stack -->
        <div class="d-flex flex-column gap-3">
            @foreach (var evt in Model)
            {
                <div class="card border-0 shadow-lg rounded-4 p-3 bg-white event-card slide-in">
                    <div class="row g-3">
                        <!-- Image -->
                        <div class="col-md-4">
                            <img src="@evt.ImagePath" alt="Event Image" class="img-fluid rounded-3 h-100 w-100 object-fit-cover" style="max-height: 200px;" />
                        </div>

                        <!-- Info -->
                        <div class="col-md-8 d-flex flex-column justify-content-between">
                            <div>
                                <div class="d-flex justify-content-between align-items-start">
                                    <h5 class="text-primary fw-bold mb-0">@evt.EventTitle</h5>
                                    <span class="text-muted small">
                                        <i class="bi bi-calendar3 me-1"></i>@evt.EventDate.ToString("yyyy-MM-dd hh:mm tt")
                                    </span>
                                </div>

                                <p class="text-muted mt-2 mb-2">
                                    <i class="bi bi-tag me-1"></i><strong>Category:</strong> @evt.EventCategory<br />
                                    <i class="bi bi-info-circle me-2"></i><strong>Description:</strong> @evt.EventDescription<br />
                                    <i class="bi bi-geo-alt me-1"></i><strong>Location:</strong> @evt.EventLocation<br />
                                    <i class="bi bi-people me-1"></i><strong>Attendees:</strong> @evt.AttendeeCount<br />
                                </p>
                            </div>

                            <!-- Action Buttons -->
                            <div class="mt-3 d-flex justify-content-end gap-2">
                                <a class="btn btn-sm btn-outline-warning" asp-controller="Events" asp-action="Edit" asp-route-id="@evt.Id">
                                    <i class="bi bi-pencil me-1"></i> Edit
                                </a>
                                <a class="btn btn-sm btn-outline-danger" asp-controller="Events" asp-action="Delete" asp-route-id="@evt.Id"
                                   onclick="return confirm('Are you sure you want to delete this event?');">
                                    <i class="bi bi-trash me-1"></i> Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>

<style>
   

    .container {
        max-width: 1500px;
        width: 95%;
    }

    .event-description {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .object-fit-cover {
        object-fit: cover;
    }

    .card {
        transition: transform 0.2s ease;
    }

        .card:hover {
            transform: translateY(-2px);
        }
</style>