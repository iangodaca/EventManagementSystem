@model IEnumerable<EventManagementSystem.Models.Entities.Event>

@{
    ViewData["Title"] = "Events List";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Events</h2>
        <a class="btn btn-primary" href="/Events/Create">
            <i class="bi bi-plus-circle me-1"></i> Add New Event
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle shadow-sm rounded-3 overflow-hidden">
            <thead class="table-primary text-center">
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Location</th>
                    <th>Date</th>
                    <th>Category</th>
                    <th>Attendees</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="text-center">
                @foreach (var evt in Model)
                {
                    <tr>
                        <td>@evt.EventTitle</td>
                        <td>@evt.EventDescription</td>
                        <td>@evt.EventLocation</td>
                        <td>@evt.EventDate.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@evt.EventCategory</td>
                        <td>@evt.AttendeeCount</td>
                        <td>
                            <a class="btn btn-sm btn-outline-warning me-1 d-inline-flex align-items-center action-btn"
                               asp-controller="Events" asp-action="Edit" asp-route-id="@evt.Id">
                                <i class="bi bi-pencil-square"></i>
                                <span class="btn-label ms-1"></span>
                            </a>
                            <a class="btn btn-sm btn-outline-danger d-inline-flex align-items-center action-btn"
                               asp-controller="Events" asp-action="Delete" asp-route-id="@evt.Id"
                               onclick="return confirm('Are you sure you want to delete this event?');">
                                <i class="bi bi-trash"></i>
                                <span class="btn-label ms-1"></span>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
